<mvc:View
    controllerName="ns.splitreuseapp.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
	<Page id="_IDGenPage3" title="{i18n>detailsTitle}">
		<content>
            <Toolbar id="_IDGenToolbar1" >
                <Text id="_IDGenText3" text="{Description}" />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button id="_IDGenButton1" text="{i18n>btnThemes}" press="onThemesPress" />
            </Toolbar>
            <HBox id="_IDGenHBox1" >
                <Text id="_IDGenText1" text="{Description}" />
            </HBox>
            <HBox id="_IDGenHBox2">
                <Text id="_IDGenText2" text="{Status}" />
            </HBox>
            <core:ComponentContainer id="idThemesComponent" ></core:ComponentContainer>
        </content>
	</Page>
</mvc:View>